{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["react", "react-native"]
  },
  "include": [
    "**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios"
  ]
}
